; Policy File to Setup App Constraints via the ApplicationPolicyStatementExtension
; The request file generated by the Intermediate CA needs to be "passed" by certutil -policy, in the intermediate CA to generate the constrained request
; 

[Version]
Signature= "$Windows NT$"

[BasicConstraintsExtension]
PathLength=1
Critical=Yes

[PolicyStatementExtension]
Policies=InternalPolicy
[InternalPolicy]
OID=1.2.3.4.1455.67.89.5
Notice="Legal Policy Statement available at http://pki.convatec.com/docs/CPS"
URL=http://pki.convatec.com/docs/CPS/

[ApplicationPolicyStatementExtension]
Policies=AppCAPolicy, AppKDCAuthPolicy, AppSrvAuthPolicy, AppCliAuthPolicy, AppCodeSignPolicy, AppOcspSignPolicy, AppIKESecurityPolicy, AppRequestAgentPolicy, AppSCLogonPolicy ; AppEmailPolicy, AppEFSPolicy
Critical = False

[AppCAPolicy]
OID = 1.3.6.1.4.1.311.10.3.10 ; Certification Authority
[AppKDCAuthPolicy]
OID = 1.3.6.1.5.2.3.5 ; KDC Authentication
[AppSrvAuthPolicy]
OID = 1.3.6.1.5.5.7.3.1 ; Server Authentication
[AppCliAuthPolicy]
OID = 1.3.6.1.5.5.7.3.2 ; Client Authentication
[AppCodeSignPolicy]
OID = 1.3.6.1.5.5.7.3.3 ; Code Signing
[AppOcspSignPolicy]
OID = 1.3.6.1.5.5.7.3.9; OCSP Signing
[AppIKESecurityPolicy]
OID = 1.3.6.1.5.5.8.2.2 ; IP security IKE intermediate
[AppRequestAgentPolicy]
OID = 1.3.6.1.4.1.311.20.2.1 ; Certificate Request Agent 
[AppSCLogonPolicy]
OID = 1.3.6.1.4.1.311.20.2.2; Smart Card Logon
;[AppEmailPolicy]
;OID = 1.3.6.1.5.5.7.3.4 ; Secure Email
;[AppEFSPolicy]
;OID = 1.3.6.1.4.1.311.10.3.4 ; Encrypting File System
